<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Tema Principal Alternatiu de la App. -->
    <style name="tema_principal" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/MarroPrincipal</item>
        <item name="colorPrimaryDark">@color/MarroSecundari</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Tema per la barra inferior. -->
    <style name="tema_barra_inf" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/edit_text_green</item>
    </style>
</resources>
