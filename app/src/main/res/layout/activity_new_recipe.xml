<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".profileFragment"
        android:background="@drawable/background">

    <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/WeeklyTopTitle"
            android:background="@drawable/spinner_background">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:context=".perfil_activity"
                android:layout_margin="30dp">

            <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nova recepta"
                    android:textSize="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"/>

            <ImageView
                    android:id="@+id/recipePic"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/recipe_pic"
                    android:layout_below="@+id/title"/>

            <EditText
                    android:id="@+id/recipeTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:tooltipText="Nom de la recepta"
                    android:layout_toRightOf="@id/recipePic"
                    android:layout_below="@+id/title"
                    android:textSize="15dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    style="@style/TextViewStyle" />

            <TextView
                    android:id="@+id/ingredients"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Ingredients"
                    android:layout_below="@+id/recipePic"
                    android:textSize="20dp"
                    android:gravity="center"
                    style="@style/TextViewStyle"/>

            <SearchView
                    android:id="@+id/search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ingredients"/>

            <TextView
                    android:id="@+id/ingredientsList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="- Ingredient 1\n- Ingredient 2\n- Ingredient 3\n"
                    android:layout_below="@+id/search"
                    android:textSize="15dp"
                    android:gravity="top"
                    style="@style/TextViewStyle" />

            <TextView
                    android:id="@+id/steps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Preparació"
                    android:layout_below="@+id/ingredientsList"
                    android:textSize="20dp"
                    android:gravity="center"
                    style="@style/TextViewStyle"/>

            <EditText
                    android:id="@+id/stepsEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Preparació"
                    android:layout_below="@+id/steps"
                    android:textSize="15dp"
                    android:gravity="top"
                    style="@style/TextViewStyle"
                    android:tooltipText="Explica com es prepara la recepta"/>

            <Button
                    android:id="@+id/post"
                    style="@style/button_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/stepsEditText"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:padding="10dp"
                    android:text="Publica" />

        </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>