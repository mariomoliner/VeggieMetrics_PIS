<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".profileFragment"
        android:background="@drawable/background">

    <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/WeeklyTopTitle"
            android:background="@drawable/spinner_background">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                tools:context=".perfil_activity">

            <ImageView
                    android:id="@+id/profilePic"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:clickable="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/profile_pic" />

            <EditText
                    android:id="@+id/profileName"
                    style="@style/edit_text_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/profilePic"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@id/profilePic"
                    android:gravity="center"
                    android:text="Sense nom"
                    android:textSize="25dp" />

            <TextView
                    android:id="@+id/profileMail"
                    style="@style/TextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profileName"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/profilePic"
                    android:gravity="center"
                    android:text="sampleuser@gmail.com"
                    android:textSize="15dp" />

            <TextView
                    android:id="@+id/signOut"
                    style="@style/TextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profileMail"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@id/profilePic"
                    android:gravity="center"
                    android:text="Tanca sessió"
                    android:textSize="20dp" />

            <TextView
                    android:id="@+id/sexText"
                    style="@style/TextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profilePic"
                    android:layout_alignStart="@+id/sexLayout"
                    android:layout_alignLeft="@+id/sexLayout"
                    android:layout_marginTop="50dp"
                    android:text="Sexe"
                    android:textSize="15dp" />

            <LinearLayout
                    android:id="@+id/sexLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sexText"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/spinner_background">

                <Spinner
                        android:id="@+id/sex"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
            </LinearLayout>

            <TextView
                    android:id="@+id/dietText"
                    style="@style/TextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profilePic"
                    android:layout_alignStart="@+id/dietLayout"
                    android:layout_alignLeft="@+id/dietLayout"
                    android:layout_marginTop="50dp"
                    android:text="Dieta"
                    android:textSize="15dp" />

            <LinearLayout
                    android:id="@+id/dietLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dietText"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/spinner_background">

                <Spinner
                        android:id="@+id/diet"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
            </LinearLayout>

            <TextView
                    android:id="@+id/heightText"
                    style="@style/TextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dietLayout"
                    android:layout_alignStart="@+id/dietLayout"
                    android:layout_alignLeft="@+id/dietLayout"
                    android:layout_marginTop="30dp"
                    android:text="Alçada"
                    android:textSize="15dp" />

            <EditText
                    android:id="@+id/height"
                    style="@style/edit_text_style"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/heightText"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:textSize="10dp"/>

            <ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="invisible"/>

            <TextView
                    android:id="@+id/weightText"
                    style="@style/TextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dietLayout"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_toRightOf="@+id/heightText"
                    android:text="Pes"
                    android:textSize="15dp" />



            <EditText
                    android:id="@+id/weight"
                    style="@style/edit_text_style"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/weightText"
                    android:layout_alignStart="@+id/weightText"
                    android:layout_alignLeft="@+id/weightText"
                    android:layout_toRightOf="@id/height"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:textSize="10dp"/>

            <TextView
                    android:id="@+id/allergyText"
                    style="@style/TextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sexLayout"
                    android:layout_alignStart="@+id/sexLayout"
                    android:layout_alignLeft="@+id/sexLayout"
                    android:layout_marginTop="30dp"
                    android:text="Al·lèrgies"
                    android:textSize="15dp" />

            <LinearLayout
                    android:id="@+id/allergyLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/allergyText"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/spinner_background">

                <Spinner
                        android:id="@+id/allergy"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
            </LinearLayout>

            <Button
                    android:id="@+id/update"
                    style="@style/button_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/height"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="20dp"
                    android:text="Desa canvis" />

            <Button
                    android:id="@+id/test_button"
                    style="@style/button_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/update"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:clickable="true"
                    android:padding="30dp"
                    android:text="Test Setmanal" />

        </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>