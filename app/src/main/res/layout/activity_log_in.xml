<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LogIn"
        android:orientation="vertical"
        android:padding="20dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        android:gravity="top|center">

        <TextView
                android:text="VeggieMetrics"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/logoText"
                android:paddingBottom="20dp"/>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp" tools:srcCompat="@tools:sample/backgrounds/scenic[5]"
                android:id="@+id/logo"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/userText"
                android:hint="Usuari"
                android:layout_gravity="center"
                android:layout_margin="10dp"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contrasenya"
                android:inputType="textPassword"
                android:ems="10"
                android:layout_margin="10dp"
                android:id="@+id/passwordText"/>

        <Button
                android:text="Inicia sessiÃ³"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/logInButton"
                android:layout_margin="20dp"/>

        <TextView
                android:text="Crea un nou usuari"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/newAccount"
                android:layout_margin="10dp"
                android:layout_gravity="center"/>

        <TextView
                android:text="Has oblidat la contrasenya?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/forgotPassword"/>


    </LinearLayout>