<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LogIn"
        android:orientation="vertical"
        android:padding="20dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        android:gravity="top|center"
        android:background="@drawable/background">

        <ImageView
                android:id="@+id/logoVM"
                android:layout_width="wrap_content"
                android:layout_height="164dp"
                android:src="@drawable/veggie" />

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/userText"
                android:hint="@string/usuari"
                android:text="mario.moliner@gmail.com"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                style="@style/edit_text_style"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/contrasenya"
                android:inputType="textPassword"
                android:text="123456"
                android:ems="10"
                android:layout_margin="10dp"
                android:id="@+id/passwordText"
                style="@style/edit_text_style"/>

        <Button
                android:text="@string/inicia_sessio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/logInButton"
                android:layout_margin="20dp"
                style="@style/button_style"/>

        <TextView
                android:text="@string/new_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/newAccount"
                android:clickable="true"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:focusable="true"
                style="@style/TextViewStyle"/>

        <TextView
                android:text="@string/miss_pass"
                android:layout_width="wrap_content"
                android:clickable="true"
                android:layout_height="wrap_content"
                android:id="@+id/forgotPassword"
                android:focusable="true"
                style="@style/TextViewStyle"/>


    </LinearLayout>